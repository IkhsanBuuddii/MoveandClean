<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp" android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/img_service_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_pindahan" android:scaleType="centerCrop"
        android:background="@drawable/circle_light_gray_background" android:padding="12dp"
        android:contentDescription="Service Icon" />

    <TextView
        android:id="@+id/tv_service_name"
        android:text="Pindahan"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>